{
  "name": "Node.js",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached"
  ],
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "vue.volar"
      ]
    }
  },
  "postCreateCommand": "npm install && npx playwright install --with-deps chromium && sudo apt-get update && sudo apt-get install -y xvfb",
  "postStartCommand": "Xvfb :99 -screen 0 1920x1080x24 -ac &"
}